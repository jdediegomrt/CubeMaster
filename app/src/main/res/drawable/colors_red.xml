<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="30"
    android:toDegrees="30">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
        <gradient
            android:centerX="-1"
            android:endColor="@color/md_red_900"
            android:startColor="@color/md_red_500"
            android:type="sweep" />
        <stroke
            android:width="0.5dp"
            android:color="@color/md_grey_500" />
        <padding
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp"
            android:top="1dp" />
    </shape>
</rotate>