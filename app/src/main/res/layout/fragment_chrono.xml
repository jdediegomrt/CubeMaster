<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/md_black_1000"
    tools:context=".view.activities.main.fragments.ChronoFragment">

    <TextView
        android:id="@+id/tutorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/md_white_1000"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/timer_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/line_indicator"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/selected"
                android:src="@drawable/line_indicator_grey" />

            <ImageView
                android:id="@+id/dot_indicator_1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:layout_toEndOf="@+id/plus2_dnf_time_layout"
                android:layout_toRightOf="@+id/plus2_dnf_time_layout"
                android:contentDescription="@string/selected"
                android:src="@drawable/circle"
                android:tint="@color/md_grey_600" />

            <ImageView
                android:id="@+id/dot_indicator_2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:layout_toStartOf="@+id/plus2_dnf_time_layout"
                android:layout_toLeftOf="@+id/plus2_dnf_time_layout"
                android:contentDescription="@string/selected"
                android:src="@drawable/circle"
                android:tint="@color/md_grey_600" />

            <RelativeLayout
                android:id="@+id/plus2_dnf_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/plus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="@string/plus2"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:textSize="50sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/dnf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="@string/dnf"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:textSize="50sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/hours_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="@string/zero"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textSize="50sp" />

                        <TextView
                            android:id="@+id/hours_dots"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="@string/twodots"
                            android:textColor="@color/md_white_1000"
                            android:textSize="50sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mins_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/mins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/zero"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textSize="50sp" />

                        <TextView
                            android:id="@+id/mins_dots"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="@string/twodots"
                            android:textColor="@color/md_white_1000"
                            android:textSize="50sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/secs_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/secs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="@string/zero"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textSize="50sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/millis_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="@string/dot"
                            android:textColor="@color/md_white_1000"
                            android:textSize="50sp" />

                        <TextView
                            android:id="@+id/millis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="@string/zero_millis"
                            android:textAlignment="center"
                            android:textColor="@color/md_white_1000"
                            android:textSize="42sp" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/last_solve_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plus2_dnf_time_layout"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/delete_solve"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/selected"
                    android:src="@drawable/baseline_delete_white_24"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/last_solve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textColor="@color/md_grey_600" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/cool_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/selected"
                android:src="@drawable/cool_line" />

            <ImageButton
                android:id="@+id/save_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_grey"
                android:contentDescription="@string/selected"
                android:src="@drawable/baseline_save_white_18"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/scramble_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@+id/scramble_switch"
                android:layout_toRightOf="@+id/scramble_switch"
                android:background="@drawable/circle_grey"
                android:contentDescription="@string/selected"
                android:src="@drawable/baseline_refresh_white_18" />

            <ImageButton
                android:id="@+id/scramble_switch"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:background="@drawable/circle_grey"
                android:contentDescription="@string/selected"
                android:src="@drawable/baseline_grid_on_white_18" />

            <ImageButton
                android:id="@+id/info_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/circle_grey"
                android:contentDescription="@string/selected"
                android:src="@drawable/baseline_info_white_18" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/scramble_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="18dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/scramble_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/scramble_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:textSize="13sp" />

                <com.caverock.androidsvg.SVGImageView
                    android:id="@+id/scramble_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="25dp"
                    android:gravity="center"
                    android:visibility="gone" />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/loading_scramble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
