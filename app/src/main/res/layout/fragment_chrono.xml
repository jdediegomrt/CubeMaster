<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_1000"
    tools:context="com.jaimedediego.cubemaster.view.ChronoFragment">

    <RelativeLayout
        android:id="@+id/chrono_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/timer_layout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/hours_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/md_white_1000"
                        android:textSize="50sp" />

                    <TextView
                        android:id="@+id/hours_dots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/twodots"
                        android:textColor="@color/md_white_1000"
                        android:textSize="50sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mins_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/mins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/md_white_1000"
                        android:textSize="50sp" />

                    <TextView
                        android:id="@+id/mins_dots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/twodots"
                        android:textColor="@color/md_white_1000"
                        android:textSize="50sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/secs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/md_white_1000"
                        android:textSize="50sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/dot"
                        android:textColor="@color/md_white_1000"
                        android:textSize="50sp" />

                    <TextView
                        android:id="@+id/millis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/zero_millis"
                        android:textColor="@color/md_white_1000"
                        android:textSize="50sp" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/timer_indicator_1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:layout_toEndOf="@+id/time_layout"
                android:layout_toRightOf="@+id/time_layout"
                android:contentDescription="@string/selected"
                android:src="@drawable/circle"
                android:tint="@color/md_grey_600" />

            <ImageView
                android:id="@+id/timer_indicator_2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:layout_toLeftOf="@+id/time_layout"
                android:layout_toStartOf="@+id/time_layout"
                android:contentDescription="@string/selected"
                android:src="@drawable/circle"
                android:tint="@color/md_grey_600" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/timer_layout"
            android:contentDescription="@string/selected"
            android:src="@drawable/cool_line" />

        <RelativeLayout
            android:id="@+id/scramble_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/timer_layout"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp">

            <ImageButton
                android:id="@+id/scramble_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/selected"
                android:padding="10dp"
                android:src="@drawable/baseline_refresh_white_36" />

            <TextView
                android:id="@+id/scramble_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:minHeight="50dp"
                android:textAlignment="center"
                android:textColor="@color/md_white_1000"
                android:textSize="13sp" />

            <com.caverock.androidsvg.SVGImageView
                android:id="@+id/scramble_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/scramble_text"
                android:layout_margin="25dp"
                android:gravity="center" />

            <ProgressBar
                android:id="@+id/loading_scramble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/timer_layout"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/background_display_window">

            <include layout="@layout/layout_info" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/timer_layout"
            android:layout_margin="10dp"
            android:background="@drawable/circle"
            android:contentDescription="@string/selected"
            android:src="@drawable/ic_info_white_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:contentDescription="@string/selected"
            android:src="@drawable/baseline_save_white_48"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
