<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dediegomrt.cubemaster.View.ChronoFragment"
    android:background="@color/md_black_1000">

    <RelativeLayout
        android:id="@+id/chronoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/animatedLine"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:background="@drawable/background"/>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layVisible2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/hours"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="50dp"
                    android:text="0"
                    android:textColor="@color/md_white_1000"/>
                <TextView
                    android:id="@+id/dotsHours"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:text=":"
                    android:textColor="@color/md_white_1000"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layVisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/mins"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="50dp"
                    android:text="0"
                    android:textColor="@color/md_white_1000"/>
                <TextView
                    android:id="@+id/dots"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:text=":"
                    android:textColor="@color/md_white_1000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/secs"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="50dp"
                    android:text="0"
                    android:textColor="@color/md_white_1000"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:text="."
                    android:textColor="@color/md_white_1000"/>
                <TextView
                    android:id="@+id/millis"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:text="000"
                    android:textColor="@color/md_white_1000"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
