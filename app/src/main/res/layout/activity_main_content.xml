<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jaimedediego.cubemaster.view.MainActivity"
    android:clipToPadding="false">

    <FrameLayout
        android:layout_above="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"/>

    <RadioGroup
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:orientation="horizontal">

        <RadioButton
            android:button="@android:color/transparent"
            android:id="@+id/timer"
            android:drawableTop="@drawable/ic_alarm_white_24dp"
            android:layout_width="match_parent"
            android:layout_weight=".25"
            android:layout_height="44dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:checked="true"/>

        <RadioButton
            android:button="@android:color/transparent"
            android:id="@+id/stats"
            android:drawableTop="@drawable/ic_assessment_white_24dp"
            android:layout_width="match_parent"
            android:layout_weight=".25"
            android:layout_height="44dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <RadioButton
            android:button="@android:color/transparent"
            android:id="@+id/mypuzzles"
            android:drawableTop="@drawable/ic_extension_white_24dp"
            android:layout_width="match_parent"
            android:layout_weight=".25"
            android:layout_height="44dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <RadioButton
            android:button="@android:color/transparent"
            android:id="@+id/settings"
            android:drawableTop="@drawable/ic_settings_white_24dp"
            android:layout_width="match_parent"
            android:layout_weight=".25"
            android:layout_height="44dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </RadioGroup>

    <RelativeLayout
        android:animateLayoutChanges="true"
        android:id="@+id/banner_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/menu_layout">

        <RelativeLayout
            android:id="@+id/banner_layout"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <!--<com.google.android.gms.ads.AdView-->
            <!--xmlns:ads="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/adView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--ads:adSize="BANNER"-->
            <!--ads:adUnitId="ca-app-pub-8962656574856623/5123832428"/>-->

            <!--Testing-->
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>

            <ImageButton
                android:layout_alignRight="@+id/banner"
                android:id="@+id/close_banner"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_cancel_black_18dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
