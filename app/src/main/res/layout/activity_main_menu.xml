<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dediegomrt.cubemaster.View.MainActivity"
    android:orientation="vertical"
    android:clipToPadding="false">

    <FrameLayout
        android:layout_above="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"/>

    <RadioGroup
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:orientation="horizontal">

        <RadioButton
            android:button="@android:color/transparent"
            android:id="@+id/timer"
            android:drawableTop="@drawable/ic_alarm_white_24dp"
            android:layout_width="match_parent"
            android:layout_weight=".25"
            android:layout_height="44dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:checked="true"/>

        <RadioButton
            android:button="@android:color/transparent"
            android:id="@+id/stats"
            android:drawableTop="@drawable/ic_assessment_white_24dp"
            android:layout_width="match_parent"
            android:layout_weight=".25"
            android:layout_height="44dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <RadioButton
            android:button="@android:color/transparent"
            android:id="@+id/mypuzzles"
            android:drawableTop="@drawable/ic_extension_white_24dp"
            android:layout_width="match_parent"
            android:layout_weight=".25"
            android:layout_height="44dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <RadioButton
            android:button="@android:color/transparent"
            android:id="@+id/settings"
            android:drawableTop="@drawable/ic_settings_white_24dp"
            android:layout_width="match_parent"
            android:layout_weight=".25"
            android:layout_height="44dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </RadioGroup>

</RelativeLayout>
