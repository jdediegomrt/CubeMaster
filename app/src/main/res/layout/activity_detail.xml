<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jaimedediego.cubemaster.view.DetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abbBarLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:titleTextColor="@color/md_white_1000"
            app:collapseIcon="@drawable/ic_arrow_back_white_24dp"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_below="@+id/abbBarLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/puzzle_name_container"
            android:background="@color/md_blue_grey_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:gravity="center_vertical"
            android:minHeight="30sp">

            <TextView
                android:id="@+id/puzzle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"
                android:textSize="15sp"/>

        </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/puzzle_name_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/statsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:gravity="center_vertical"
                    android:minHeight="50sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_of_solves"
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/times_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:gravity="center_vertical"
                    android:minHeight="50sp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/best_time"
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/best_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:gravity="center_vertical"
                    android:minHeight="50sp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/worst_time"
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/worst_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:gravity="center_vertical"
                    android:minHeight="50sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/average"
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:gravity="center_vertical"
                    android:minHeight="50sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_average_of_5"
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/averageof5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:gravity="center_vertical"
                    android:minHeight="50sp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_average_of_10"
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/averageof10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:background="@color/md_blue_grey_100"
                    android:id="@+id/times_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:gravity="center_vertical"
                    android:minHeight="30sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/times_detail"
                        android:textStyle="bold"
                        android:textColor="@color/md_black_1000"
                        android:textSize="15sp"/>

                    <Spinner
                        android:id="@+id/sort_mode"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/times"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
